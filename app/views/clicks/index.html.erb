<!DOCTYPE html>
<html>
<head>
  <title>DevBBQ</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link class="include" rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
  <link href="https://s3-us-west-2.amazonaws.com/user-upload786/WeBuild/assets/css/style.css" rel="stylesheet">
  <link class="include" rel="stylesheet" type="text/css" href="https://s3-us-west-2.amazonaws.com/user-upload786/jglot/jquery.jqplot.min.css"/>
  <script type="text/javascript" src="https://s3-us-west-2.amazonaws.com/user-upload786/jglot/jquery.jqplot.min.js"></script>
  <script class="include" language="javascript" type="text/javascript" src="https://s3-us-west-2.amazonaws.com/user-upload786/jglot/plugins/jqplot.barRenderer.min.js"></script>
  <script class="include" language="javascript" type="text/javascript" src="https://s3-us-west-2.amazonaws.com/user-upload786/jglot/plugins/jqplot.pointLabels.min.js"></script>
  <script class="include" language="javascript" type="text/javascript" src="https://s3-us-west-2.amazonaws.com/user-upload786/jglot/plugins/jqplot.categoryAxisRenderer.min.js"></script>
</head>
<body>


<div id="devise" class="container text-right">
  <% if user_signed_in? %>
      <p>
        Logged in as <strong><%= current_user.email %></strong>.
      </p>

      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-theme' %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-theme' %>
  <% else %>
      <%= link_to new_user_registration_path, :class => 'navbar-link btn btn-warning' do %>
          <span class="glyphicon glyphicon-heart"></span>Sign up
      <% end %>

      <%= link_to new_user_session_path, :class => 'navbar-link btn btn-success' do %>
          <span class="glyphicon glyphicon-share-alt"></span> Login
      <% end %>
  <% end %>
</div>

<div class="container">


  <br><br>

  <div id="stat">

    <div id="result" class="alert alert-success" style="display: none;">Sending an email to careers@devbbq.com ...</div>

    <br>



    <%= form_for(@click, remote: true) do |f| %>
        <%= f.submit 'Click Me', :class => 'btn btn-success', id: "mybtn" %>
    <% end %>

    <br><br>

    <div class="row">
      <div id="chart" style="height:300px; width:1000px;"></div>
    </div>


    <br>

    <h1 class="text-center">
      <a href="#">
        <span id="prev" class="glyphicon glyphicon-menu-left" aria-hidden="true" onclick="getClickStat(month - 1)"></span>
      </a>
      <a href="#">
        <span id="next" class="glyphicon glyphicon-menu-right" aria-hidden="true" onclick="getClickStat(month + 1)"></span>
      </a>
    </h1>

  </div>
</div>

<script>
  var month = <%= @month %>;
  var min = <%= @min %>;
  var max = <%= @max %>;

  $(document).ready(function () {
    plotGraph(<%= @stat %>, "Click Statistic for <%= Date::MONTHNAMES[@month.to_i] %>");
  });

</script>
</body>
</html>
